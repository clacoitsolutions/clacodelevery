            /*$('#divCollBy').show();*/
            $('#divCollBy').hide();
            $('#divReason').hide();
            $('#customCheck1').prop('checked', true);
            $('#ddldelivery').hide();
            $('#txtCollectedBy').val("Vendor");
            $('#txtDeliveryReason').hide();
            $('#divpaymode').hide();
            $('#divammount').hide();
            $('#Payment').hide();
            $('#txtbtn1').hide();
            $('#divotp').hide();


        }
        else {
            $('#customCheck1').removeAttr('disabled');

            $('#divDelDate').show();
            $('#divCollBy').hide();
            $('#divReason').hide();
            $('#divpaymode').show();
            $('#txtbtn1').show();
            if ($('#paymode').val() == "Cash")

            {
                $('#Payment').hide();
                $('#divammount').show();
                $('#txtbtn1').show();
                $('#divotp').show();




            }
            else if ($('#paymode').val() == "select") {
                $('#Payment').hide();
                $('#divammount').hide();
                $('#txtbtn1').hide();
                $('#divotp').hide();
            }
            else {
                $('#Payment').show();
                $('#divammount').show();
                $('#divotp').show();
                $('#txtbtn1').hide();



            }

        }
