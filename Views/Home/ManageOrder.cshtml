    function OpenHideColl(obj) {

        if ($(obj).is(':checked')) {
            $('#divCollBy').fadeIn("slow").toggleClass("hidden");
        } else {
            $('#divCollBy').fadeOut("slow").toggleClass("hidden");
        }
    }
    function OpenHidePanel(obj) {
        if ($(obj).is(':checked')) {
            $('#panel2').show();
        } else {
            $('#panel2').hide();
        }
    }


