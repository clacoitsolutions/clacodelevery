
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="~/Content/img/calco1.png">
    <title>Claco Store</title>
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        .dd {
            margin-top: 80px;
            box-shadow: 0px 0px 5px #757575;
            border-radius: 15px;
        }

        .dd1 {
            margin-top: 50px;
        }

        @@media only screen and (max-width:767px) {
            .dd {
                margin-top: 0px !important;
            }

            .dd1 {
                margin-top: 0px;
            }
        }
    </style>
    <style>
        @@media (max-width: 768px) { /* Adjust the max-width as needed for your target phone screen size */
            .dd img {
                display: none;
            }
        }
    </style>
</head>
<body>

    <div class="container-fluid">
        <div class="row" style="background:#fa2365;height:50px;">
            <div class="col-sm-12">
            </div>
        </div>
    </div>


    <br />
    <br />
    <div class="container" style="height:600px;">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-10">
                <div class="row dd">
                    <div class="col-sm-7">
                        <img src="../Content/img/userlogin.png" height="590" />
                    </div>
                    <div class="col-sm-5 dd1" style="padding:50px;">
                        <form action="/Home/SignIn" method="post" enctype="multipart/form-data">
                            <label>UserName</label>
                            <input type="number" class="form-control" name="txtname" /><br /> 
                            <label>Password</label>
                            <input type="password" class="form-control" name="txtpassword" />
                            <br /><br /> 

                            <input type="submit" class="form-control" value="Sign in" style="background:#fa2365;color:white;" />
                        </form>

                        <input type="text" value="@ViewBag.msg" style="border:none;color:red" />
                    </div>
                </div>
            </div>
            <div class="col-sm-1"></div>
        </div>
    </div>
</body>
</html>
